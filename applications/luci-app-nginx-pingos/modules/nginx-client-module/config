               $ngx_addon_dir/ngx_client.c                          \
               $ngx_addon_dir/ngx_http_client.c                     \
               "

NGX_ADDON_DEPS="$NGX_ADDON_DEPS                                     \
               $ngx_addon_dir/ngx_client.h                          \
               $ngx_addon_dir/ngx_http_client.h                     \
               "

CFLAGS="$CFLAGS -I $ngx_addon_dir"
