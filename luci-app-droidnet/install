apk_name="luci-app-droidnet"
version="1.1"

echo -e "\033[34müîÑ Updating OPKG \033[0m"
if ! opkg update > /dev/null; then
    echo -e "\033[31m‚ùå Failed to update OPKG \033[0m"
    exit 1
fi

echo -e "\033[34müì• Downloading packages \033[0m"
if ! curl -s -o "/tmp/${apk_name}_${version}_all.ipk" -LO "https://github.com/animegasan/$apk_name/releases/download/$version/${apk_name}_${version}_all.ipk"; then
    echo -e "\033[31m‚ùå Failed to download packages \033[0m"
    exit 1
fi

echo -e "\033[34müì¶ Installing $apk_name \033[0m"
if ! opkg install "/tmp/${apk_name}_${version}_all.ipk" > /dev/null; then
    echo -e "\033[31m‚ùå Failed to install $apk_name \033[0m"
    exit 1
fi

echo -e "\033[32m‚úÖ Process completed. $apk_name ver $version has been installed. \033[0m"
