# Copyright (C) 2009-2010 OpenWrt.org

START=99
STOP=80

USE_PROCD=1

start_service() {
	procd_open_instance
	procd_set_param command "/usr/sbin/acpid"
	procd_append_param command -f
	procd_append_param command -S
	procd_set_param pidfile "/var/run/acpid.pid"
}

reload_service() {
	procd_send_signal "acpid"
}
