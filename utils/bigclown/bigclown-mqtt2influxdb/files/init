#!/bin/sh /etc/rc.common

START=99
STOP=1

USE_PROCD=1

PROG=/usr/bin/mqtt2influxdb
CONF=/etc/bigclown-mqtt2influxdb.yml

start_service() {
	procd_open_instance
	procd_set_param command "$PROG" -d -c "$CONF"
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_close_instance
}

stop_service() {
	service_stop "$PROG"
}
