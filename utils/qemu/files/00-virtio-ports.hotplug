[ "$SUBSYSTEM" = "virtio-ports" ] || exit 0

syspath="/sys/$DEVPATH"
name="$(cat "$syspath/name" 2>/dev/null)"
[ -n "$name" ] || exit 0

case "$ACTION" in
	"add")
		mkdir -p /dev/virtio-ports
		ln -s "/dev/$DEVNAME" "/dev/virtio-ports/$name"
		;;
	"del")
		rm -f "/dev/virtio-ports/$name"
		;;
esac
