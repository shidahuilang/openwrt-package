{
	"luci-app-disks-info": {
		"description": "Grant access to disks-info procedures",
		"read": {
			"cgi-io": [ "exec" ],
			"file": {
				"/dev": [ "list" ],
				"/bin/df -Th /dev/*": [ "exec" ],
				"/usr/sbin/fdisk -l /dev/*": [ "exec" ],
				"/usr/sbin/smartctl -iAHl scttemp -l error -l devstat --json=c /dev/*": [ "exec" ],
				"/usr/sbin/smartctl -l scttempint,[0-9,p]* /dev/*": [ "exec" ]
			},
		}
	}
}
