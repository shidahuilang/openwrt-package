{
	"luci-app-nodogsplash": {
		"description": "Grant permissions for the AdGuard Home LuCI app",
		"read": {
			"uci": [
				"nodogsplash"
			],
			"file": {
				"/usr/bin/ndsctl": [
					"stat",
					"exec"
				],
				"/usr/bin/ndsctl status": [
					"exec"
				],
				"/usr/bin/ndsctl auth *": [
					"exec"
				],
				"/usr/bin/ndsctl deauth *": [
					"exec"
				],
				"/usr/bin/ndsctl block *": [
					"exec"
				],
				"/usr/bin/ndsctl unblock *": [
					"exec"
				],
				"/usr/bin/ndsctl allow *": [
					"exec"
				],
				"/usr/bin/ndsctl unallow *": [
					"exec"
				],
				"/usr/bin/ndsctl trust *": [
					"exec"
				],
				"/usr/bin/ndsctl untrust *": [
					"exec"
				],
				"/usr/bin/ndsctl json": [
					"exec"
				]
			}
		},
		"write": {
			"uci": [
				"nodogsplash"
			]
		}
	}
}
