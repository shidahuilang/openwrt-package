START=30
STOP=85
USE_PROCD=1

start_service()
{
	procd_open_instance
	procd_set_param command /sbin/dhcpcd -B
	procd_set_param respawn
	procd_close_instance
}

reload_service()
{
	/sbin/dhcpcd -n
}
