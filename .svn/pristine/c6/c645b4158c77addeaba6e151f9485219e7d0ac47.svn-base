[ "$SUBSYSTEM" = "virtio-ports" ] || exit 0

syspath="/sys/$DEVPATH"
name="$(cat "$syspath/name" 2>/dev/null)"
[ -n "$name" ] || exit 0

case "$ACTION" in
	"add")
		/etc/init.d/qemu-ga start
		;;
esac
